{
    "name": "@glen-84/eslint-config",
    "version": "3.11.0",
    "description": "A shareable ESLint config for TypeScript projects.",
    "author": "Glen Ainscow",
    "main": "index.js",
    "files": [
        "index.js"
    ],
    "scripts": {
        "format": "prettier --write \"**/*.js\""
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.js": "prettier --check"
    },
    "dependencies": {
        "@typescript-eslint/parser": "^4.21.0",
        "confusing-browser-globals": "^1.0.10"
    },
    "devDependencies": {
        "@glen-84/prettier-config": "^2.1.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "simple-git-hooks": "^2.3.1"
    },
    "peerDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "eslint": "^7.24.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glen-84/eslint-config.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "license": "MIT",
    "prettier": "@glen-84/prettier-config"
}
